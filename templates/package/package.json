{
  "name": "package",
  "type": "module",
  "version": "0.0.0",
  "description": "A starter for creating a TypeScript package.",
  "author": "Achmad F. Ibrahim <acfatah@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/acfatah/library#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acfatah/library.git"
  },
  "bugs": {
    "url": "https://github.com/acfatah/library/issues"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "build": "bun run scripts/build.ts",
    "lint": "bunx --bun eslint",
    "lint:changed": "bunx --bun eslint --pass-on-no-patterns --no-warn-ignored $(git diff --name-only --diff-filter=d HEAD)",
    "lint:staged": "bunx --bun eslint --pass-on-no-patterns --no-warn-ignored $(git diff --cached --name-only --diff-filter=d)",
    "lint:inspect": "bunx --bun eslint --inspect-config",
    "lint:commit-message": "bunx --bun commitlint --edit",
    "format": "changed_files=$(git diff --name-only --diff-filter=d HEAD); bunx --bun eslint --fix --no-warn-ignored $changed_files",
    "format:staged": "staged_files=$(git diff --cached --name-only --diff-filter=d); bunx --bun eslint --fix --pass-on-no-patterns --no-warn-ignored $staged_files && git add $staged_files",
    "typecheck": "tsgo --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "precommit": "bun run lint:staged",
    "release": "bunx --bun bumpp --excute=\"bun install\""
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bun": "latest",
    "bumpp": "^10.2.3",
    "eslint": "^9.34.0",
    "eslint-plugin-format": "^1.0.1",
    "simple-git-hooks": "^2.13.1"
  },
  "simple-git-hooks": {
    "commit-msg": "bun lint:commit-message",
    "pre-commit": "bun precommit"
  }
}
